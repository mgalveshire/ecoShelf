<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"
    android:gravity="center"
    android:weightSum="5"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_margin="3dp"
    android:layout_gravity="bottom">


    <!-- Input Button -->
    <Button
        android:id="@+id/btn_input"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:drawableTop="@drawable/add_24px"
        android:layout_weight="1"
        android:gravity="center"
        android:backgroundTint="@color/lightPrimary"
        android:layout_margin="5dp"/>

    <!-- Stats Button -->
    <Button
        android:id="@+id/btn_stats"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:drawableTop="@drawable/ic_manage"
        android:layout_weight="1"
        android:gravity="center"
        android:backgroundTint="@color/lightPrimary"
        android:layout_margin="5dp"/>

    <!-- Home Button -->
    <Button
        android:id="@+id/btn_home"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:drawableTop="@drawable/home_24px"
        android:layout_weight="1"
        android:gravity="center"
        android:backgroundTint="@color/lightPrimary"
        android:layout_margin="5dp"/>

    <!-- Lifecycle Button -->
    <Button
        android:id="@+id/btn_lifecycle"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:drawableTop="@drawable/cycle_24px"
        android:layout_weight="1"
        android:gravity="center"
        android:backgroundTint="@color/lightPrimary"
        android:layout_margin="5dp"/>

    <!-- Options Button -->
    <Button
        android:id="@+id/btn_options"
        android:layout_width="1dp"
        android:layout_height="72dp"
        android:drawableTop="@drawable/ic_options"
        android:layout_weight="1"

        android:gravity="center_vertical"
        android:backgroundTint="@color/lightPrimary"
        android:layout_margin="5dp"/>

</LinearLayout>